{
    "compilerOptions": {
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es2022",
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "verbatimModuleSyntax": true,
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitOverride": true,
      "rootDir": "src",
      "module": "NodeNext",
      "outDir": "dist",
      "sourceMap": true,
      "lib": ["es2022"],
    },
      "include": ["src", "scripts"],
      "exclude": ["node_modules"]
  }